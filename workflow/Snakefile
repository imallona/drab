#!/usr/bin/env snakemake -s

rule all:
    input:
        "output/hello_output.txt"

rule compile:
    conda:
        "../env/build.yaml"
    input:
        cpp="src/hello.cpp",
        cmake="src/CMakeLists.txt"
    output:
        "build/hello"
    shell:
        """
        mkdir -p build
        cd build
        cmake ../src
        cmake --build .
        """

rule run:
    conda:
        "../env/build.yaml"
    input:
        "build/hello"
    output:
        "output/hello_output.txt"
    shell:
        """
        mkdir -p output
        {input} > {output}
        """
